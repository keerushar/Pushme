<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textvie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arm workout"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#0e34b1"
                android:layout_marginLeft="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/7.Arm raises"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#111112"
                    android:layout_marginLeft="12dp"/>

                <ImageButton
                    android:id="@+id/armrises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconfinder_video_216502"
                    android:layout_alignParentRight="true"/>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arm_rises"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jumping_jacks"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2/7.Push-Ups"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#111112"
                    android:layout_marginLeft="12dp"/>

                <ImageButton
                    android:id="@+id/pushup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconfinder_video_216502"
                    android:layout_marginLeft="180dp"/>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pushup"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/push_up"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3/7.Triceps dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#111112"
                    android:layout_marginLeft="12dp"/>

                <ImageButton
                    android:id="@+id/tricep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconfinder_video_216502"
                    android:layout_marginLeft="180dp"/>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tricepdips"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tricep_dip"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4/7.Punches"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#111112"
                    android:layout_marginLeft="12dp"/>

                <ImageButton
                    android:id="@+id/punch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconfinder_video_216502"
                    android:layout_marginLeft="180dp"/>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/punches"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textview7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/punches"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textview9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/7.Shoulder Stretch"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#111112"
                    android:layout_marginLeft="12dp"/>

                <ImageButton
                    android:id="@+id/shoulder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconfinder_video_216502"
                    android:layout_marginLeft="130dp"/>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoulder_stretch"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textview8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shoulder_stretch"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textview10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6/7.Diamond pushup"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#111112"
                    android:layout_marginLeft="12dp"/>

                <ImageButton
                    android:id="@+id/diamond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconfinder_video_216502"
                    android:layout_marginLeft="130dp"/>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/diamond_pushup"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textview11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diamond_pushup"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textview13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7/7.One leg pushup"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#111112"
                    android:layout_marginLeft="12dp"/>

                <ImageButton
                    android:id="@+id/oneleg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconfinder_video_216502"
                    android:layout_marginLeft="130dp"/>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/one_leg_pushup"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textview12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_leg_pushup"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginLeft="12dp"/>





        </LinearLayout>

    </ScrollView>

</RelativeLayout>